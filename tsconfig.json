{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["es6"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "exclude": ["./node_modules", "./lib"],
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}
